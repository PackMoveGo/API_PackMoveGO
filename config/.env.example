# =================================================================
# PACKMOVEGO BACKEND ENVIRONMENT CONFIGURATION
# =================================================================
# Copy this file to .env and fill in your actual values
# Priority: .env.local > .env.{NODE_ENV} > .env

# =================================================================
# ENVIRONMENT & PORTS
# =================================================================
NODE_ENV=development
PORT=3000
GATEWAY_PORT=3003
LOCAL_NETWORK=localhost

# =================================================================
# GATEWAY CONFIGURATION
# =================================================================
# Frontend API Key - Required for gateway authentication
API_KEY_FRONTEND=pmg_frontend_live_sk_a7f8e2d9c1b4x6m9p3q8r5t2w7y1z4a6

# Admin API Key - For administrative operations
API_KEY_ADMIN=pmg_admin_live_sk_m9x2c8v5b1n7q4w8e3r6t9y2u5i8o1p4

# Enable API key validation
API_KEY_ENABLED=true

# Private API URL (where gateway proxies to)
PRIVATE_API_URL=http://localhost:3000

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================
JWT_SECRET=your_jwt_secret_here_min_32_chars
ADMIN_PASSWORD=your_admin_password

# Hash value for additional security
HASH=<HashBakeValue>

# Session secret
SESSION_SECRET=your_session_secret_here

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Alternative MongoDB URI (used by some services)
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Prisma Database URL (if using Prisma)
DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key

# Redis URL (for caching/sessions)
REDIS_URL=redis://localhost:6379

# =================================================================
# CORS CONFIGURATION
# =================================================================
CORS_ORIGIN=https://www.packmovego.com,https://packmovego.com,http://localhost:3000,http://localhost:5173,http://localhost:5001
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD
CORS_ALLOWED_HEADERS=Content-Type,Authorization,x-api-key,X-Requested-With,Accept,Origin

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# SECURITY & ACCESS CONTROL
# =================================================================
# Whitelisted IPs (comma-separated)
WHITELISTED_IPS=127.0.0.1,::1
ALLOWED_IPS=127.0.0.1,::1
ALLOWED_DOMAINS=api.packmovego.com,www.packmovego.com,packmovego.com,localhost:3003,localhost:5173,localhost:5001

# =================================================================
# SSL/TLS CONFIGURATION
# =================================================================
USE_SSL=false
SSL_KEY_PATH=./config/certs/key.pem
SSL_CERT_PATH=./config/certs/cert.pem

# =================================================================
# SSH SERVER (Optional)
# =================================================================
SSH_ENABLED=false
SSH_PORT=2222
SSH_PASSWORD=your_ssh_password

# =================================================================
# ARCJET SECURITY (Optional)
# =================================================================
ARCJET_KEY=your_arcjet_key_here
ARCJET_ENV=development

# =================================================================
# PAYMENT INTEGRATION (Optional)
# =================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =================================================================
# EMAIL CONFIGURATION (Optional)
# =================================================================
EMAIL_USER=support@packmovego.com
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true

# =================================================================
# TWILIO SMS (Optional)
# =================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =================================================================
# GOOGLE SERVICES (Optional)
# =================================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GA_TRACKING_ID=your_google_analytics_id
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# =================================================================
# FACEBOOK INTEGRATION (Optional)
# =================================================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =================================================================
# MONITORING & LOGGING (Optional)
# =================================================================
DEBUG=false
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# =================================================================
# MAINTENANCE & BACKUP (Optional)
# =================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is under maintenance. Please check back soon.
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =================================================================
# MOBILE ACCESS (Optional)
# =================================================================
MOBILE_ACCESS_ENABLED=false
MOBILE_CORS_WILDCARD=false
MOBILE_AUTH_DISABLED=false

# =================================================================
# PRODUCTION SETTINGS (Optional)
# =================================================================
PRODUCTION_DOMAIN=https://www.packmovego.com
API_URL=https://api.packmovego.com

# =================================================================
# WEBHOOK CONFIGURATION (Optional)
# =================================================================
WEBHOOK_SECRET=your_webhook_secret_here

# =================================================================
# AI SERVICES (Optional)
# =================================================================
AI_ENABLED=false
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-4

